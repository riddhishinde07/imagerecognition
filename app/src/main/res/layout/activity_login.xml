<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040303"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    android:weightSum="7"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center">


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="top|center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"

                    android:text="Login"
                    android:textColor="#03A9F4"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edtemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edit_txt_1"
                    android:hint="Email"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="#DADADA" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/edtpassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edit_txt_1"
                    android:hint="Password"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textColorHint="#DADADA" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|top"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/sign_in"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rectangle_grad"
                android:text="Sign in"
                android:textAllCaps="false"
                android:textColor="#E9EDEF"
                android:textSize="16sp" />





        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="bottom">

            <Button
                android:id="@+id/sign_in_button"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="229dp"
                android:layout_marginRight="229dp"
                android:background="@drawable/googleg_standard_color_18"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/login_facbook"
                android:layout_width="38dp"
                android:layout_height="43dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="155dp"
                android:layout_marginRight="155dp"
                android:background="@drawable/ic_facebook"
                android:textAllCaps="false"
                android:textSize="16sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">


            <TextView
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:text="You don't have an account?"
                android:textColor="#03A9F4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:textColor="#EB87F6"
                android:textSize="16sp" />


        </LinearLayout>>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top|center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/forgot"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Forgot Password?"
                android:textColor="#03A9F4"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>